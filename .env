# Local development .env for docker-compose

# Django secret key (replace with secure value in production)
DJANGO_SECRET_KEY=change_me_to_a_secure_secret_key

# Debug mode
DJANGO_DEBUG=True

# Allowed hosts (comma-separated fallback)
# Added VPS IP and production hostnames
ALLOWED_HOSTS=72.62.232.8,localhost,127.0.0.1,admin.mohamedghanem.cloud,student.mohamedghanem.cloud

# Database settings (used by Django when DATABASE_URL is not provided)
DB_NAME=lmsdb
DB_USER=lmsuser
DB_PASSWORD=change_me_to_strong_password
DB_HOST=postgres
DB_PORT=5432

# Postgres service environment (docker-compose uses these for the postgres container)
POSTGRES_DB=lmsdb
POSTGRES_USER=lmsuser
POSTGRES_PASSWORD=change_me_to_strong_password

# Optional: DATABASE_URL (overrides individual DB_* vars if set)
# DATABASE_URL=postgres://lmsuser:change_me_to_strong_password@postgres:5432/lmsdb

# CORS and CSRF trusted origins (JSON arrays expected by settings)
# Include IP fallback and HTTP for local testing (HTTP only deployment)
CORS_ALLOWED_ORIGINS=["http://72.62.232.8","http://localhost:3000","http://admin.mohamedghanem.cloud","http://student.mohamedghanem.cloud"]
CSRF_TRUSTED_ORIGINS=["http://admin.mohamedghanem.cloud","http://student.mohamedghanem.cloud"]

# Hosts used by nginx configs and certificates
ADMIN_HOST=admin.example.com
STUDENT_HOST=student.example.com

# SSL filenames to be placed in ./nginx/certs/ (for production)
ADMIN_CRT=admin.crt
ADMIN_KEY=admin.key
STUDENT_CRT=student.crt
STUDENT_KEY=student.key

# Misc
DB_SSL=False
DJANGO_LOG_LEVEL=DEBUG
